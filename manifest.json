{
    "manifest_version": 2,
    "name": "Artifacts for Genshin Planner",
    "version": "1.2.2",
    "description": "A chrome extension that allows users to add artifacts and set their stats.",
    "icons": {
      "128": "src/images/icon.png"
    },
    "web_accessible_resources": [
      "src/images/*",
      "src/js/*"
    ],
    "browser_action": {
      "default_icon": "src/images/icon.png"
    },
    "content_scripts": [
      {
        "matches": [ "https://genshin-center.com/planner" ],
        "js": [ "src/js/content_script.js" ],
        "css": [ "src/css/style.css" ],
        "run_at": "document_end"
      }
    ],
    "permissions": [
      "storage"
    ]
}
